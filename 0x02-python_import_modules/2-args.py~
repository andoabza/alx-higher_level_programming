#!/usr/bin/python3
import sys
lent = len(sys.argv)-1
if lent == 0:
    print("{:d} arguments.".format(lent))
elif lent == 1:
    print("{:d} argument :".format(lent))
else:
    print("{:d} arguments :".format(lent))
i = 1
for i in range(lent):
    print("{}: {}".format(i + 1, str(sys.argv[i])))
    i = i + 1
